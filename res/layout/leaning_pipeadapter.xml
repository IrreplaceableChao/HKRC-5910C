<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_leaning_pipeaadapter"
        android:layout_marginTop="@dimen/main_space_default_size"
        android:textColor="@color/title_color"
        android:textSize="@dimen/main_text_default_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/widget28"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView_Show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="请选择适配器："
            android:textColor="@color/text_color"
            android:textSize="20dp" >
        </TextView>

        <TextView
            android:id="@+id/Spinner01"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" 
            android:textColor="#000000"
            android:background="@drawable/shape">
        </TextView>
    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
    </LinearLayout>
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索列表:"
        android:layout_marginRight="115dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/duankou_listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape"
        android:fadingEdge="none"
        >
    </ListView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索适配器"
            android:textSize="15dp" />

          <Button
              android:id="@+id/Button01"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="设置适配器"
              android:textSize="15dp" />

        <Button
            android:id="@+id/fanhuizhuye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回主页"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>