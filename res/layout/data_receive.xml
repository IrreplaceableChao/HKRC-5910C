<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_space_default_size"
        android:text="@string/title_data_receive"
        android:textColor="@color/title_color"
        android:textSize="@dimen/main_text_default_size"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pb_data_receive"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_space_default_size"
        android:max="100"
        android:padding="@dimen/main_padding_default_size"
        android:progress="0" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_weight="0.81"
        android:orientation="horizontal"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="序号"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />
                    
                    
                    
                   

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="孔深 "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />

                  

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="倾角 "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="磁方位角"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="磁场强度 "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="校验和"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />

                    
                       
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="温度 "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />
<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="重力高边 "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />
                    
                   
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="点号"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />
                     
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="电池电压 "
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />
                      <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_third"
                        android:gravity="center"
                        android:text="选点时间"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/detect_text_default_size"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TableLayout
                        android:id="@+id/tl_receive_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:orientation="vertical"
                        android:stretchColumns="*" >
                    </TableLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/guiji"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="轨迹显示及评价"
            android:visibility="gone"
            android:textSize="@dimen/main_btn_default_size" />

        <Button
            android:id="@+id/exitL"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="返回主页"
            android:visibility="gone"
            android:textSize="@dimen/main_btn_default_size"
            />
    </LinearLayout>

</LinearLayout>