<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_space_default_size"
        android:text="@string/title_self_detection"
        android:textColor="@color/title_color"
        android:textSize="@dimen/main_text_default_size"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pb_self_detect"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:padding="@dimen/main_padding_default_size"
        android:progress="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="检测数据"
        android:textColor="@color/text_color"
        android:textSize="@dimen/detect_text_default_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/main_space_default_size"
        android:background="@drawable/shape"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="温度:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="倾角:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />
 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="磁方位角："
                android:textColor="@color/text_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="校验和:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="电池电压:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

           

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="自检时间："
                android:textColor="@color/text_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:textSize="@dimen/detect_text_default_size" >

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="0℃"
                android:textColor="@color/value_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="0.00°"
                android:textColor="@color/value_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />
<TextView
                android:id="@+id/tv_gravity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="0.00°"
                android:textColor="@color/value_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_checksum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="0.000"
                android:textColor="@color/value_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_voltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="0.000V"
                android:textColor="@color/value_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />

            

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space_default_size"
                android:text="0.00s"
                android:textColor="@color/value_color"
                android:textSize="@dimen/detect_text_default_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bn_tg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="自检合格"
        android:textSize="25dp"
        android:visibility="gone" />

</LinearLayout>